{
	"settings": {
	    "analysis": {
	      "analyzer": {
	        "std_german": { 
		          "type":      "standard",
		          "stopwords": "_german_"
		        }
			},
			"filter" : {
                "german_stemmer" : {
                    "type" : "stemmer",
                    "name" : "german"
                }
            }
		}
	},
	"mappings" : {
		"dynamic": "true",
		"dynamic_templates": [
			{
				"i18n_key": {
					"match_mapping_type": "string",
					"match":   "valuespaces.*.key",
					"mapping": {
					"type": "keyword"
					}
				}
			},
			{
				"i18n_de": {
					"match_mapping_type": "string",
					"match":   "valuespaces.*.de",
					"mapping": {
					  "type": "text",
					  "fields": {
						"keyword": { 
						  "type":  "keyword"
						}
					}
				  }
				}
			},
			{
				"i18n_en": {
					"match_mapping_type": "string",
					"match":   "valuespaces.*.en",
					"mapping": {
					  "type": "text",
					  "fields": {
						"keyword": { 
						  "type":  "keyword"
						}
					}
				  }
				}
			}
		  ],
        "properties" : {
            "ranking" : { "type" : "rank_feature" },
            "created_at" : { "type" : "date" },
            "modified_at" : { "type" : "date" },
            "url" : { "type" : "keyword" },
            "fulltext" : { "type" : "text" },
            "type" : { "type" : "keyword" },
            "source": { 
            	"properties" : {
            		"id" : { "type" : "keyword" },
					"name" : {
						"type" : "text",
						"fields": {
							"keyword": { 
							  "type":  "keyword"
							},
							"search_as_you_type": { 
								"type":  "search_as_you_type"
							  }
						}  
					},
            		"ranking" : { "type" : "rank_feature" },
            		"physical_location" : { "type" : "geo_shape" },
            		"total_count" : { "type" : "long" }
            	}
			},
			"collection": {
				"properties" : {
					"uuid" : { "type" : "keyword" }
				}
			},
			"thumbnail": {
				"properties" : {
            		"mimetype" : { "type" : "keyword" },
            		"small" : { "type" : "binary" },
            		"large" : { "type" : "binary" }
            	}
			},
			
            "valuespaces": { 
            	"properties" : {
					
				}
			},
            "lom": { 
            	"properties" : {
					"general":{
						"properties": {
							"identifier": { "type" : "keyword" },
							"title" : {
								"type" : "text",
								"fields": {
									"keyword": { 
									  "type":  "keyword"
									},
									"search_as_you_type": { 
										"type":  "search_as_you_type"
									  }
								}  
							},
							"language" : { "type" : "keyword" },
							"keyword" : { 
								"type" : "text",
								"fields": {
									"keyword": { 
									  "type":  "keyword"
									}
								} 
							},
							"coverage" : { "type" : "keyword" },
							"structure" : { "type" : "keyword" },
							"aggregationLevel" : { "type" : "byte" }
						}
					},
					"lifecycle":{
						"properties": {
							"version": { "type" : "keyword" },
							"status": { "type" : "keyword" },
							"contribute" : { 
								"properties": {
									"role": { "type" : "keyword" },
									"firstName": { "type" : "keyword" },
									"lastName": { "type" : "keyword" },
									"organization": { "type" : "keyword" },
									"uuid": { "type" : "keyword" }
								}
							}
						}
					},
					"technical":{
						"properties": {
							"format": { "type" : "keyword" },
							"size" : { "type" : "long" },
							"location" : { "type" : "keyword" },
							"requirement" : { "type" : "text" },
							"installationRemarks" : { "type" : "text" },
							"otherPlatformRequirements" : { "type" : "text" },
							"duration": { "type" : "long" }
						}
					},
					"educational":{
						"properties": {
							"interactivityType": { "type" : "keyword" },
							"learningResourceType": { "type" : "keyword" },
							"interactivityLevel": { "type" : "keyword" },
							"semanticDensity": { "type" : "keyword" },
							"intendedEndUserRole": { "type" : "keyword" },
							"context" : { "type" : "search_as_you_type" },
							"typicalAgeRange" : {
								"properties":{
									"from": {"type" : "byte" },
									"to": {"type" : "byte" }
								}
							},
							"difficulty" : { "type" : "keyword" },
							"typicalLearningTime" : { "type" : "long" },
							"description" : { "type" : "text" },
							"language" : { "type" : "keyword" }
						}
					},
					"rights":{
						"properties": {
							"cost": { "type" : "keyword" },
							"copyrightAndOtherRestrictions": { "type" : "keyword" },
							"description": { "type" : "text" }
						}
					},
					"classification":{
						"properties": {
							"purpose": { "type" : "keyword" },
							"taxonPath": { "type" : "keyword" },
							"description": { "type" : "text" },
							"keyword": { "type" : "keyword" }
						}
					}
            	}
            }
        }
    }
}